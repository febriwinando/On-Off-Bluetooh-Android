<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>


    <style name="TWOHSwitch" parent="Theme.AppCompat.Light">
        <!-- active thumb & track color (30% transparency) -->
        <item name="colorControlActivated">#000000</item>

        <!-- inactive thumb color -->
        <item name="colorSwitchThumbNormal">#FF311B92</item>

        <!-- inactive track color (30% transparency) -->
        <item name="android:colorForeground">#000000</item>
    </style>

    <style name="SwitchCompatStyle" >
        <item name="android:thumb">@drawable/switch_thumb</item>
        <item name="trackTint">@color/switch_color</item>
    </style>
</resources>
